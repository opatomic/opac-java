#javac -d $OTMPDIR -cp "$HOME/Downloads/ycsb-redis-binding-0.15.0/lib/*:$OUTDIR/opac.jar" ../test/com/yahoo/ycsb/db/*.java
#jar cvf $OUTDIR/opatomic-ycsb.jar -C $OTMPDIR .
#deldir $OTMPDIR

